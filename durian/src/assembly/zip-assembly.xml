<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>buildzip</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>automated.txt</include>
				<include>manual.txt</include>
				<include>guild.txt</include>
				<include>config.properties</include>
				<include>notification.wav</include>
				<include>default.wav</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/terms</directory>
			<outputDirectory>terms</outputDirectory>
			<includes/>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/images</directory>
			<outputDirectory>images</outputDirectory>
			<includes/>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/script</directory>
			<outputDirectory>script</outputDirectory>
			<includes/>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>